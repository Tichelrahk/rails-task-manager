<h1>Tasks</h1>
<ul class="task-list">
  <% @tasks.each do |thing| %>
    <div class="li-container">
      <% if thing.completed %>
        <i class="far fa-check-circle"></i>
      <% else %>
        <i class="far fa-circle"></i>
      <% end %>
      <li><%= link_to thing.title, task_path(thing) %> â€¢ <%= link_to task_path(thing), method: :delete do %> <i class="fas fa-trash-alt"></i> <% end %>
       </li>
    </div>
  <% end %>
</ul>
<%= link_to "Create a task", new_path %>
